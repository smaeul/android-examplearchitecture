<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="activity"
            type="com.example.application.MainActivity" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="32dp">

        <TextView
            android:id="@+id/fragment_title"
            style="?android:attr/textAppearanceLarge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/main_fragment_1_title"
            android:textAlignment="center" />

        <Button
            android:id="@+id/start_activity_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/switch_fragment_button"
            android:layout_centerHorizontal="true"
            android:onClick="@{() -> activity.startChildActivity()}"
            android:text="@string/start_child_activity" />

        <Button
            android:id="@+id/switch_fragment_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:onClick="@{() -> activity.switchToFragment2()}"
            android:text="@string/switch_to_fragment_2" />
    </RelativeLayout>
</layout>
